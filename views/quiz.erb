<html>
<head>
	<title><%= @title %> </title>
</head>
<body>
<form action="/quiz" method="post">
	<% question_counter  = 1 %>
  <% @questions_and_answers.each do |question, answers| %>
    <br>
    <br>
    <h2> <%= question %> </h2>
		<br>
		<% answer_counter = 0 %>
    <% answers.each do |answer| %>
      <br>
      <label><%=answer%></label>
			<input type="radio" name="question <%=question_counter%>" value= "<%=answer_counter%>"/>
			<% answer_counter += 1 %>
    <% end %>
		<% question_counter += 1 %>
  <% end %>
	<br>
	<input type="submit">
</form>
</body>
</html>
